<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".module.main.UI.Welcome_Activity">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_welcome"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>

    <Button
        android:id="@+id/btn_welcome"
        android:visibility="gone"
        android:text="立即体验"
        android:textColor="@color/btn_welcome_text"
        android:background="@drawable/btn_welcome_selector"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginBottom="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_logotext_welcome"
        android:src="@mipmap/bg_logo_font"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_logo_welcome"
        android:layout_above="@id/iv_logotext_welcome"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_about_app" />

</RelativeLayout>
